- model_class = Comment
%p
  %strong= model_class.human_attribute_name(:commenter) + ':'
  = comment.commenter

%p
  = comment.body

= link_to t('.destroy', :default => t("helpers.links.destroy")), [comment.post, comment], :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
