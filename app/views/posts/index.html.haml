%h1 Listing posts

= link_to "New post", new_post_path

%table
  %tr
    %thTitle
    %hText
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.title
      %td= post.text
      %td= link_to 'Show', post_path(post)
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Delete', post_path(post),
          :method => :delete, :data => { :confirm => 'Are you sure?' }
