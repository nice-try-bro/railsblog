- model_class = Post::Comment
%p
  %strong= model_class.human_attribute_name(:commenter) + ':'
  = comment.commenter

%p
  = comment.body

-#FIXME: should be translatable
= link_to 'Reply', new_post_comment_path(:post_id => @post.id,
:parent_id => comment.id), :class => 'btn'

= link_to t('.destroy', :default => t("helpers.links.destroy")), post_comment_path(comment.post, comment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

= nested_comments comment.children
