-#NOTE: implicit api version mentioned
= simple_form_for [@post, @post.comments.build], :remote => :true,
    :url => api_v1_post_comments_path(@post),
    :html => { :class => 'comment-form' } do |f|
  = f.input :commenter
  = f.input :body

  = f.button :submit
  -#FIXME: should be translatable or have default attributes
  = f.button :button, 'Cancel', :type => 'reset'
